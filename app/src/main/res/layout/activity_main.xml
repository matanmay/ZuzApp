<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movement Tracking App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Calibration Status -->
    <TextView
        android:id="@+id/tvCalibrationStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not calibrated"
        android:textSize="14sp"
        android:textColor="#999999"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Calibrate Button -->
    <Button
        android:id="@+id/btnCalibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALIBRATE GYROSCOPE"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#2196F3"/>

    <!-- Experimenter Code Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Experimenter Code / Subject Name"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etExperimenterCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Session ID Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Session ID (optional - auto-generated if empty)"
        android:layout_marginBottom="24dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSessionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Start/Stop Session Button -->
    <Button
        android:id="@+id/btnToggleSession"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="START SESSION"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Status Display -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to start"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#E8F5E9"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Sensor Data Display -->
    <TextView
        android:id="@+id/tvSensorData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyro: 0.00 deg/s"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:gravity="center"
        android:fontFamily="monospace"/>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions:\n1. Calibrate the gyroscope while keeping device still\n2. Enter experimenter code\n3. Press START SESSION to begin recording\n4. Press STOP SESSION to save data"
        android:textSize="12sp"
        android:textColor="#666666"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:gravity="start"/>

</LinearLayout>